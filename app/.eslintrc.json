{
	"env": {
		"browser": false,
		"es2021": true,
		"mocha": true,
		"node": true
	},
	"plugins": ["@typescript-eslint"],
	"extends": [
		"next",
		"next/core-web-vitals",
		"prettier/prettier",
		"plugin:node/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12
	},
	"rules": {
		"node/no-unsupported-features/es-syntax": [
			"error",
			{ "ignores": ["modules"] }
		]
	}
}
